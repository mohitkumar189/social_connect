<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewAppLogo"
        android:layout_width="@dimen/logo_height"
        android:layout_height="@dimen/logo_width"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/social_connect_logo" />

    <LinearLayout
        android:id="@+id/container_user_pin_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewAppLogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_enter_text"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editPassDigitOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shape"
                android:gravity="center"
                android:hint="*"
                android:inputType="numberPassword"
                android:padding="@dimen/font_16"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editPassDigitTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_shape"
                android:gravity="center"
                android:hint="*"
                android:inputType="numberPassword"
                android:padding="@dimen/font_16"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editPassDigitThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_shape"
                android:gravity="center"
                android:hint="*"
                android:inputType="numberPassword"
                android:padding="@dimen/font_16"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editPassDigitFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_shape"
                android:gravity="center"
                android:hint="*"
                android:inputType="numberPassword"
                android:padding="@dimen/font_16"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvForgotPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/pin_change_text" />
    </LinearLayout>

</RelativeLayout>
