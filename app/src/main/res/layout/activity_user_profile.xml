<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dbdee3"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_10"
                android:padding="@dimen/margin_5"
                android:src="@drawable/pencil" />
        </android.support.v7.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeBlankLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_alignParentTop="true"
                android:background="@color/green" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/man"
                app:civ_border_color="#3c3c3c"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tvUserProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10"
                android:text="MOHIT KUMAR"
                android:textColor="@color/green"
                android:textSize="@dimen/font_14"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tvUserProfileName"
                android:orientation="vertical"
                android:padding="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="Email Address"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/editEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_box_background"
                    android:enabled="false"
                    android:padding="@dimen/margin_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="First Name"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                        <EditText
                            android:id="@+id/editFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box_background"
                            android:enabled="false"
                            android:padding="@dimen/margin_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="Last Name"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                        <EditText
                            android:id="@+id/editLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box_background"
                            android:enabled="false"
                            android:padding="@dimen/margin_5" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="Mobile number"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editUserMobilenumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/edit_box_background"
                        android:enabled="false"
                        android:inputType="number"
                        android:padding="@dimen/margin_5" />

                    <Switch
                        android:id="@+id/switchPhonePolicy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:checked="true"
                        android:enabled="false"
                        android:textColor="@color/text_color" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="Gender"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <RadioGroup
                    android:id="@+id/radioGroupUserGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_5">

                    <RadioButton
                        android:id="@+id/radioBtnMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="Male"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/radioBtnFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="Female"
                        android:textColor="@color/text_color" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="Privacy"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <RadioGroup
                    android:id="@+id/radioGroupUserPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_5">

                    <RadioButton
                        android:id="@+id/radioBtnPublic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:enabled="false"
                        android:text="Public"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/radioBtnPrivate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="Private"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/radioBtnOnlyMe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:enabled="false"
                        android:text="Only Me"
                        android:textColor="@color/text_color" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="Address"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/editUserAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_box_background"
                    android:enabled="false"
                    android:padding="@dimen/margin_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="Landmark"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                        <EditText
                            android:id="@+id/editUserLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box_background"
                            android:enabled="false"
                            android:padding="@dimen/margin_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="City"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                        <EditText
                            android:id="@+id/editUserCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box_background"
                            android:enabled="false"
                            android:padding="@dimen/margin_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="Zip code"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                        <EditText
                            android:id="@+id/editUserZipcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box_background"
                            android:enabled="false"
                            android:padding="@dimen/margin_5" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="State"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                        <EditText
                            android:id="@+id/editUserState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box_background"
                            android:enabled="false"
                            android:padding="@dimen/margin_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="Country"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                        <EditText
                            android:id="@+id/editUserCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box_background"
                            android:enabled="false"
                            android:padding="@dimen/margin_5" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnSubmitProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/rounded_button_background"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingLeft="@dimen/margin_30"
                    android:paddingRight="@dimen/margin_30"
                    android:paddingTop="@dimen/margin_10"
                    android:text="SUBMIT"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
